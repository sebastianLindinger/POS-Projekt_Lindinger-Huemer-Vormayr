<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="10"
        android:inputType="phone"
        android:key="preference_amountOfTowns"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Wie viele Orte sollen angezeigt werden?"
        android:title="Anzahl der angezeigten Orte" />
    <ListPreference
        android:defaultValue="near"
        android:entries="@array/pref_array"
        android:entryValues="@array/pref_values"
        android:key="preference_sorting"
        android:summary="Nach was soll sortiert werden?"
        android:title="Sortierung"></ListPreference>
</PreferenceScreen>