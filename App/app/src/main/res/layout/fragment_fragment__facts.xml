<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FactsActivity.Fragment_Facts">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/LightBlue"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/DarkBlue"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Facts_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Nutzerkommentare zu Meggenhofen"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listview_Facts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:dividerHeight="1dp"></ListView>

            <Button
                android:id="@+id/button_Facts_WriteFact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/DarkBlue"
                android:text="Kommentar schreiben"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>